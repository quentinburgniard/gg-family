<p id="notice"><%= notice %></p>

<h1>Workflow Stages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Default Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_stages.each do |workflow_stage| %>
      <tr>
        <td><%= workflow_stage.name %></td>
        <td><%= workflow_stage.default_description %></td>
        <td><%= link_to 'Show', workflow_stage %></td>
        <td><%= link_to 'Edit', edit_workflow_stage_path(workflow_stage) %></td>
        <td><%= link_to 'Destroy', workflow_stage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

